{
	"compilerOptions": {
		"lib": ["es2021", "dom"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDirs": ["./src"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
		"sourceMap": true,
		"baseUrl": "./src",
		"strict": true,
		"esModuleInterop": true
	},
	"exclude": ["node_modules", "dist", "public"]
}
